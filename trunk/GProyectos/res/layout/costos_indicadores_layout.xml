<LinearLayout android:id="@+id/indicadoresLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
   
		<TextView
		    android:id="@+id/txtSelFecha"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/indicadores_seleccionar_fecha"
			android:layout_marginTop="5dip"
			android:textStyle="bold"
			android:textSize="15sp"
			android:paddingLeft="@dimen/page_padding">
		</TextView>
		
		<EditText
		    android:text="@string/indicadores_datepicker"
		    android:id="@+id/edtDatePicker"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:enabled="false"
			android:layout_marginTop="5dip"
			android:paddingLeft="@dimen/page_padding"
			android:paddingRight="@dimen/page_padding">
		</EditText>
		
		<Button
		    android:id="@+id/btnVerIndicadores"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/indicadores_btnVerIndicadores"
			android:enabled="false"
			android:layout_marginTop="5dip">
		</Button>
		
		<TextView
		    android:id="@+id/txtMensaje"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			android:layout_marginTop="5dip"
			android:textStyle="bold"
			android:textColor="@color/azul"
			android:paddingLeft="@dimen/page_padding"
			android:paddingRight="@dimen/page_padding"
			android:textSize="15sp">
		</TextView>
		
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/titulo_txt"
	        android:orientation="horizontal"
	        android:padding="10dp" >
	
	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:gravity="center"
	            android:text="@string/indicadores_columnaNombre"
	            android:textAppearance="@android:style/TextAppearance.Medium"
	            android:textColor="@color/blanco" />
	
	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="@string/indicadores_columnaValor"
	            android:textAppearance="@android:style/TextAppearance.Medium"
	            android:textColor="@color/blanco" />
		<!-- 
	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="@string/indicadores_columnaCriticidad"
	            android:textAppearance="@android:style/TextAppearance.Medium"
	            android:textColor="@color/blanco" />
        -->
	    </LinearLayout>
		
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/linearLayout"
	    android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		
	    <ListView
	        android:id="@+id/lvIndicadores"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:paddingLeft="@dimen/page_padding"
   			android:paddingRight="@dimen/page_padding"  
   			>
	    </ListView>
	    
	</LinearLayout>
</LinearLayout>