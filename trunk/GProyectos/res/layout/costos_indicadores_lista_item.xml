<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp" >

    <TextView
        android:id="@+id/txtCostosNombreIndicador"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left"
        android:text="@string/indicadores_columnaNombre"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/subtitulo_txt" />

    <TextView
        android:id="@+id/txtCostosValorIndicador"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/indicadores_columnaValor"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/subtitulo_txt" />

</LinearLayout>