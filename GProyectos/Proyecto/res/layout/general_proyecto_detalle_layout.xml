                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:padding="5dp"
                android:background="@drawable/login_input_bg_unselected"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>

      
        <LinearLayout
