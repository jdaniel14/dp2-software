            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="Tipo:"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/txtTipo"
                android:padding="5dp"
